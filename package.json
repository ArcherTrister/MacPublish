{
  "name": "beidou",
  "version": "2.4.0",
  "description": "云南成为车联网北斗服务平台",
  "homepage": "http://www.yncwbd.com",
  "author": {
    "name": "云南成为智能科技有限公司",
    "email": "ArcherTrister@outlook.com"
  },
  "copyright": "Copyright © 云南成为智能科技有限公司",
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ArcherTrister/MacPublish.git"
  },
  "scripts": {
    "win32": "electron-builder --win --ia32",
    "win64": "electron-builder --win --x64",
    "release": "electron-builder --publish onTagOrDraft",
    "test": "electron .",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron .",
    "start": "npm run dev",
    "build": "node build/build.js",
    "lint": "eslint --ext .js,.vue src",
    "electron_dev": "npm run build && electron build/electron.js",
    "electron_build": "electron-packager ./ --platform=win32 --arch=x64 --overwrite"
  },
  "build": {
    "productName": "Beidou",
    "appId": "com.yncwbd.beidou",
    "artifactName": "${productName}-Setup-mac.${ext}",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "./main.js"
    ],
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 230,
          "type": "file"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "type": "distribution",
      "darkModeSupport": true,
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "static/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.yncwbd.com:13510/mac/"
      },
      {
        "provider": "github"
      }
    ]
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "devDependencies": {
    "electron": "^4.1.3",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "electron-log": "^3.0.4",
    "electron-updater": "^4.0.7"
  }
}
